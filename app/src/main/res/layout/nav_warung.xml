<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Rasa Utama 1"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view1"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/rasut"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Buana"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view2"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/buana"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Minang Raya"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view3"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/minangraya"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Warung Mahasiswa"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view4"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/warungmhs"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Raito"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view5"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/raito1"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingTop="5sp"
                    android:text="Pak Kumis"/>

                <Button
                    android:layout_gravity="center"
                    android:id="@+id/view6"
                    android:layout_width="350dip"
                    android:layout_height="200dip"
                    android:background="@drawable/pakkumis"/>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>